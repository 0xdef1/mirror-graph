{
  "name": "asset-server",
  "version": "0.1.0",
  "main": "src/main.ts",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --signal SIGINT --exec ts-node -e ts,json,R --files -r tsconfig-paths/register src/main.ts",
    "start": "NODE_ENV=production node --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts",
    "cli": "node --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/cli/main.ts",
    "collector": "node --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/collector/main.ts",
    "test": "jest",
    "lint": "eslint src --ext .js,.ts",
    "prettier": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@sentry/node": "^5",
    "@terra-money/terra.js": "^0.4.15",
    "apollo-server": "^2.11.0",
    "apollo-server-koa": "^2.17.0",
    "bignumber.js": "^9.0.0",
    "bluebird": "^3.7.2",
    "bn.js": "^5.1.2",
    "class-validator": "^0.12.2",
    "commander": "^6",
    "crypto-js": "^4.0.0",
    "date-fns": "^2.16.0",
    "form-data": "^3.0.0",
    "graphql": "^15",
    "graphql-scalars": "^1.2.7",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-helmet": "^5.2.0",
    "koa-router": "^9.4.0",
    "node-fetch": "^2.6.0",
    "pg": "^8",
    "promptly": "^3.0.3",
    "reflect-metadata": "^0.1.13",
    "subscriptions-transport-ws": "^0.9.16",
    "ts-node": "^9",
    "tsconfig-paths": "^3.9.0",
    "type-graphql": "^1.0.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.24",
    "typeorm-typedi-extensions": "^0.2.3",
    "typescript": "^4"
  },
  "devDependencies": {
    "@types/bignumber.js": "^5.0.0",
    "@types/bluebird": "^3.5.30",
    "@types/bn.js": "^4.11.6",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26",
    "@types/koa": "^2.11.4",
    "@types/koa-router": "^7.4.1",
    "@types/node-fetch": "^2.5.5",
    "@types/pg": "^7.14.3",
    "@types/sinon": "^9",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "husky": "^4",
    "jest": "^26",
    "lint-staged": "^10",
    "nodemon": "^2.0.3",
    "prettier": "^2",
    "sinon": "^9.0.0",
    "ts-jest": "^26"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "yarn"
    }
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "eslint .",
      "git add"
    ]
  },
  "prettier": {
    "parser": "typescript",
    "printWidth": 100,
    "singleQuote": true,
    "semi": false
  }
}
